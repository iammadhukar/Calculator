<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">

    <TextView
        android:id="@+id/textView"
        android:layout_width="157dp"
        android:layout_height="21dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/input_background"
        android:gravity="right"
        android:padding="5dp"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="113dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <Button
            android:id="@+id/one"
            android:layout_width="24dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_background"
            android:text="1"
            android:textSize="15sp"
            app:layout_constraintEnd_toStartOf="@+id/two"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/two"
            android:layout_width="24dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_background"
            android:text="2"
            android:textSize="15sp"
            app:layout_constraintEnd_toStartOf="@+id/three"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/three"
            android:layout_width="24dp"
            android:layout_height="20dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="80dp"
            android:background="@drawable/button_background"
            android:text="3"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/cLetter"
            android:layout_width="24dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/exxtra_button_background"
            android:text="C"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/acLetter"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/acLetter"
            android:layout_width="24dp"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/exxtra_button_background"
            android:text="AC"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/three"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/four"
            android:layout_width="24dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_background"
            android:text="4"
            android:textSize="15sp"
            app:layout_constraintEnd_toStartOf="@+id/five"
            app:layout_constraintTop_toBottomOf="@+id/one" />


        <Button
            android:id="@+id/five"
            android:layout_width="24dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_background"
            android:text="5"
            android:textSize="15sp"
            app:layout_constraintEnd_toStartOf="@+id/six"
            app:layout_constraintTop_toBottomOf="@+id/two" />

        <Button
            android:id="@+id/six"
            android:layout_width="24dp"
            android:layout_height="20dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="80dp"
            android:background="@drawable/button_background"
            android:text="6"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/three" />

        <Button
            android:id="@+id/add"
            android:layout_width="24dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/exxtra_button_background"
            android:text="+"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/subtract"
            app:layout_constraintTop_toBottomOf="@+id/cLetter" />

        <Button
            android:id="@+id/subtract"
            android:layout_width="24dp"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/exxtra_button_background"
            android:text="-"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/six"
            app:layout_constraintTop_toBottomOf="@+id/acLetter" />

        <Button
            android:id="@+id/seven"
            android:layout_width="24dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_background"
            android:text="7"
            android:textSize="15sp"
            app:layout_constraintEnd_toStartOf="@+id/eight"
            app:layout_constraintTop_toBottomOf="@+id/four" />


        <Button
            android:id="@+id/eight"
            android:layout_width="24dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_background"
            android:text="8"
            android:textSize="15sp"
            app:layout_constraintEnd_toStartOf="@+id/nine"
            app:layout_constraintTop_toBottomOf="@+id/five" />

        <Button
            android:id="@+id/nine"
            android:layout_width="24dp"
            android:layout_height="20dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="80dp"
            android:background="@drawable/button_background"
            android:text="9"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/six" />

        <Button
            android:id="@+id/multiply"
            android:layout_width="24dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/exxtra_button_background"
            android:text="*"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/divide"
            app:layout_constraintTop_toBottomOf="@+id/add" />

        <Button
            android:id="@+id/divide"
            android:layout_width="24dp"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/exxtra_button_background"
            android:text="/"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/nine"
            app:layout_constraintTop_toBottomOf="@+id/subtract" />

        <Button
            android:id="@+id/decimal"
            android:layout_width="24dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_background"
            android:text="."
            android:textSize="15sp"
            app:layout_constraintEnd_toStartOf="@+id/zero"
            app:layout_constraintTop_toBottomOf="@+id/seven" />


        <Button
            android:id="@+id/zero"
            android:layout_width="24dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_background"
            android:text="0"
            android:textSize="15sp"
            app:layout_constraintEnd_toStartOf="@+id/doubleZero"
            app:layout_constraintTop_toBottomOf="@+id/eight" />

        <Button
            android:id="@+id/doubleZero"
            android:layout_width="24dp"
            android:layout_height="20dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="80dp"
            android:background="@drawable/button_background"
            android:text="00"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nine" />

        <Button
            android:id="@+id/equals"
            android:layout_width="24dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/exxtra_button_background"
            android:text="="
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/percent"
            app:layout_constraintTop_toBottomOf="@+id/multiply" />

        <Button
            android:id="@+id/percent"
            android:layout_width="24dp"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/exxtra_button_background"
            android:text="%"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/doubleZero"
            app:layout_constraintTop_toBottomOf="@+id/divide" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>