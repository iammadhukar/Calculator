<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">

    <TextView
        android:id="@+id/textView"
        android:layout_width="343dp"
        android:layout_height="67dp"
        android:layout_marginTop="184dp"
        android:background="@drawable/input_background"
        android:gravity="right"
        android:padding="5dp"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/one"
        android:layout_width="55dp"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="416dp"
        android:background="@drawable/button_background"
        android:text="1"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/two"
        android:layout_width="55dp"
        android:layout_height="43dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="416dp"
        android:background="@drawable/button_background"
        android:text="2"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/three"
        android:layout_width="55dp"
        android:layout_height="43dp"
        android:layout_marginStart="176dp"
        android:layout_marginTop="416dp"
        android:background="@drawable/button_background"
        android:text="3"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cLetter"
        android:layout_width="55dp"
        android:layout_height="43dp"
        android:layout_marginTop="416dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/exxtra_button_background"
        android:text="C"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/acLetter"
        android:layout_width="55dp"
        android:layout_height="43dp"
        android:layout_marginTop="416dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/exxtra_button_background"
        android:text="AC"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@+id/cLetter"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/four"
        android:layout_width="55dp"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="488dp"
        android:background="@drawable/button_background"
        android:text="4"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/five"
        android:layout_width="55dp"
        android:layout_height="43dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="488dp"
        android:background="@drawable/button_background"
        android:text="5"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/six"
        android:layout_width="55dp"
        android:layout_height="43dp"
        android:layout_marginStart="176dp"
        android:layout_marginTop="488dp"
        android:background="@drawable/button_background"
        android:text="6"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/add"
        android:layout_width="55dp"
        android:layout_height="43dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/exxtra_button_background"
        android:text="+"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cLetter" />

    <Button
        android:id="@+id/subtract"
        android:layout_width="55dp"
        android:layout_height="43dp"
        android:layout_marginStart="260dp"
        android:layout_marginTop="488dp"
        android:background="@drawable/exxtra_button_background"
        android:text="-"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/seven"
        android:layout_width="55dp"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="560dp"
        android:background="@drawable/button_background"
        android:text="7"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/eight"
        android:layout_width="55dp"
        android:layout_height="43dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="560dp"
        android:background="@drawable/button_background"
        android:text="8"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/nine"
        android:layout_width="55dp"
        android:layout_height="43dp"
        android:layout_marginStart="176dp"
        android:layout_marginTop="560dp"
        android:background="@drawable/button_background"
        android:text="9"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/multiply"
        android:layout_width="55dp"
        android:layout_height="43dp"
        android:layout_marginTop="560dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/exxtra_button_background"
        android:text="*"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/divide"
        android:layout_width="55dp"
        android:layout_height="43dp"
        android:layout_marginStart="260dp"
        android:layout_marginTop="560dp"
        android:background="@drawable/exxtra_button_background"
        android:text="/"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/decimal"
        android:layout_width="55dp"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="628dp"
        android:background="@drawable/button_background"
        android:text="."
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/zero"
        android:layout_width="55dp"
        android:layout_height="43dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="628dp"
        android:background="@drawable/button_background"
        android:text="0"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/doubleZero"
        android:layout_width="55dp"
        android:layout_height="43dp"
        android:layout_marginStart="176dp"
        android:layout_marginTop="628dp"
        android:background="@drawable/button_background"
        android:text="00"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/equals"
        android:layout_width="55dp"
        android:layout_height="43dp"
        android:layout_marginTop="628dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/exxtra_button_background"
        android:text="="
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/percent"
        android:layout_width="55dp"
        android:layout_height="43dp"
        android:layout_marginStart="264dp"
        android:layout_marginTop="628dp"
        android:background="@drawable/exxtra_button_background"
        android:text="%"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>